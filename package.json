{
    "name": "mock-league",
    "version": "1.0.0",
    "description": "An API that serves the latest scores of fixtures of matches in a 'Mock Premier League'",
    "main": "dist/index.js",
    "scripts": {
        "serve": "npm run build & node ./dist/index.js",
        "start": "npm run build && pm2 kill && pm2-runtime start ./dist/index.js && pm2 monit",
        "lint": "eslint . --ext .ts",
        "test": "jest",
        "ts-node": "ts-node --transpileOnly ./src/index.ts",
        "dev": "./node_modules/nodemon/bin/nodemon.js -e ts  --exec \"npm run lint && npm run ts-node\"",
        "build": "npm run lint && tsc"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Goodness-Chukwudi/mock-league.git"
    },
    "author": "Goodness Chukwudi",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Goodness-Chukwudi/mock-league/issues"
    },
    "homepage": "https://github.com/Goodness-Chukwudi/mock-league#readme",
    "dependencies": {
        "@faker-js/faker": "^8.4.1",
        "@joi/date": "^2.1.1",
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "connect-redis-stack": "^0.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-rate-limit": "^7.3.1",
        "express-session": "^1.18.0",
        "helmet": "^7.1.0",
        "joi": "^17.13.1",
        "jsonwebtoken": "^9.0.2",
        "moment": "^2.30.1",
        "mongodb-memory-server": "^9.3.0",
        "mongoose": "^8.3.3",
        "mongoose-paginate-v2": "^1.8.0",
        "pm2": "^5.4.0",
        "randomstring": "^1.3.0",
        "rate-limit-redis": "^4.2.0",
        "response-time": "^2.3.2",
        "supertest": "^7.0.0",
        "ts-jest": "^29.1.4",
        "uuid": "^9.0.1",
        "winston-mongodb": "^5.1.1"
    },
    "devDependencies": {
        "@tsconfig/node20": "^20.1.4",
        "@types/bcryptjs": "^2.4.6",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-session": "^1.18.0",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/randomstring": "^1.3.0",
        "@types/response-time": "^2.3.8",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^7.8.0",
        "@typescript-eslint/parser": "^7.8.0",
        "eslint": "^8.57.0",
        "jest": "^29.7.0",
        "nodemon": "^3.1.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5"
    }
}
